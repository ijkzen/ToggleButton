<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="enableBackgroundColor" format="color" />
    <attr name="disableBackgroundColor" format="color" />
    <attr name="enableRoundColor" format="color" />
    <attr name="disableRoundColor" format="color" />
    <attr name="duration" format="integer" />
    <attr name="enable" format="boolean" />

    <declare-styleable name="ToggleButton">
        <attr name="enableRoundColor" />
        <attr name="disableRoundColor" />
        <attr name="enableBackgroundColor" />
        <attr name="disableBackgroundColor" />
        <attr name="duration" />
        <attr name="enable" />
    </declare-styleable>

    <declare-styleable name="SlideToggle">
        <attr name="enableRoundColor" />
        <attr name="disableRoundColor" />
        <attr name="enableBackgroundColor" />
        <attr name="disableBackgroundColor" />
        <attr name="enable" />
        <attr name="duration" />
    </declare-styleable>
</resources>
