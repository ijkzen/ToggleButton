<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="tech.ijkzen.mybutton.MainActivity">

    <tech.ijkzen.component.ToggleButton
        android:id="@+id/toggle1"
        app:enable="true"
        android:layout_above="@id/toggle"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        app:enableBackgroundColor="@android:color/holo_green_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <tech.ijkzen.component.ToggleButton
        android:id="@+id/toggle"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        app:enable="true"
        app:duration="1200"
        android:layout_gravity="center_horizontal" />


    <tech.ijkzen.component.ToggleButton
        android:id="@+id/toggle2"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/toggle"
        android:layout_marginTop="30dp"
        app:enable="true"
        app:enableBackgroundColor="@android:color/holo_red_light"
        app:enableRoundColor="@android:color/holo_green_light"
        app:disableBackgroundColor="@android:color/holo_green_light"
        app:disableRoundColor="@android:color/holo_red_light"
        android:layout_width="120dp"
        android:layout_height="70dp"/>
</RelativeLayout>